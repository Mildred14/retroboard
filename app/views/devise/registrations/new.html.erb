<div class="card justify-content-center align-items-center card-devise">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'input-gray' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em class="font-12">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'input-gray' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-gray mb-3' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'cta-btn session-btn mb-3'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
